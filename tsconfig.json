{
  "compilerOptions": {
    "target": "es2016", //指定编译的ECMAScript目标版本
    "module": "commonjs", //模块化
    "lib": [
      "es2015"
    ], //编译过程中需要引入的库文件的列表
    "outDir": "./dist", // 指定输出目录
    "removeComments": true, //移除编译结果的注释
    "esModuleInterop": true, //兼容commonjs，设置为true后，可以使用es6的导入导出模式来兼容老版本的commonjs导入导出模式
    "strictNullChecks": true, //严格检查将null和undefined赋值给变量
    "strictPropertyInitialization": true, //严格控制类属性初始化
  },
  "include": [ //编译文件包含哪些文件
    "src/**/*"
  ],
  "exclude": [ //编译文件排除哪些文件
    "node_modules",
    "**/*.spec.ts"
  ]
}